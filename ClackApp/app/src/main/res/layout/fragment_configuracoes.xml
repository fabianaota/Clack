<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint-fav"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".fragments.ConfiguracoesFragment"
    tools:layout_editor_absoluteY="25dp"
    >

    <TextView
        android:id="@+id/textTituloConf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="CONFIGURAÇÃO"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />


    <Switch
        android:id="@+id/switcher-notificacao"
        android:layout_width="316dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:drawableLeft="@drawable/notificacao"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/colorWhite"
        android:showText="true"
        android:text="  NOTIFICAÇÃO"
        android:textOff="Off"
        android:textOn="On"
        android:textSize="17sp"
        android:textStyle="bold"
        android:thumb="@drawable/switch_thumb"
        android:track="@drawable/switch_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTituloConf"
        tools:ignore="MissingConstraints" />


    <Switch
        android:id="@+id/switcher-traducao"
        android:layout_width="316dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:drawableLeft="@drawable/language"
        android:textColor="@color/colorWhite"
        android:fontFamily="sans-serif-condensed"
        android:showText="true"
        android:text="  TRADUÇÃO"
        android:textOff="Ing"
        android:textOn="Port"
        android:textSize="17sp"
        android:textStyle="bold"
        android:thumb="@drawable/switch_thumb"
        android:track="@drawable/switch_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switcher-notificacao"
        tools:ignore="MissingConstraints" />

