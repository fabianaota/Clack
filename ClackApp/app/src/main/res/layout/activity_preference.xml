<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreferenceActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimaryOriginal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorBlack"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_weight="4"
            android:text="@string/preference_greetings"
            android:textColor="@color/colorPrimaryOriginal"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:gravity="end"
            android:src="@mipmap/ic_launcher_clack"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Escolha suas preferÃªncias!"
                android:textColor="@color/colorBlack"
                android:textSize="28sp"
                android:textStyle="bold"

                />

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:checked="false"
                android:text="@string/preference_checkbox_text_acao"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="normal|bold" />

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:checked="false"
                android:text="@string/preference_checkbox_text_animacao"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="normal|bold" />

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:checked="false"
                android:text="@string/preference_checkbox_text_aventura"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="normal|bold" />

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:checked="false"
                android:text="Romance"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="normal|bold" />

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:checked="false"
                android:text="@string/preference_checkbox_text_crime"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="normal|bold" />

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:checked="false"
                android:text="@string/preference_checkbox_text_documentario"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="normal|bold" />

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:checked="false"
                android:text="@string/preference_checkbox_text_drama"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="normal|bold" />

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:checked="false"
                android:text="@string/preference_checkbox_text_ficcao"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="normal|bold" />

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:checked="false"
                android:text="@string/preference_checkbox_text_suspense"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="normal|bold" />

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:checked="false"
                android:text="@string/preference_checkbox_text_terror"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="normal|bold" />


            <Button
                android:id="@+id/button_enviar_id"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/colorBlack"
                android:onClick="botaoClicado"
                android:text="ENVIAR"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>